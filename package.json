{
    "name": "react-dnd-sortables",
    "version": "0.0.1",
    "description": "Abstraction of react-dnd for nested sortable items",
    "private": false,
    "author": "Marten Wallewein",
    "main": "build/index.js",
    "scripts": {
        "start-dev": "webpack-dev-server --watch --hot --config webpack.dev.js",
        "clean:build": "rimraf ./build",
        "dist": "cd ./dist/lib && npm publish",
        "lint": "tslint src/**/* ",
        "lintfix": "tslint --fix src/**/* ./test",
        "build": "npm run lint && npm run build:types && npm run build:js",
        "build:types": "tsc --emitDeclarationOnly -d --declarationDir build",
        "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline && cd src && find . -name '*.css' -exec cp --parents \\{\\} ../build \\; && cd .."
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.0.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.0.0",
        "@types/jsdom": "^11.12.0",
        "@types/lodash": "^4.14.116",
        "@types/react": "^16.4.2",
        "@types/react-dnd": "^3.0.2",
        "@types/react-dom": "^16.0.7",
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "rimraf": "^2.6.1",
        "tslib": "^1.9.3",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3",
        "webpack": "^4.23.1",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.10",
        "style-loader": "^0.22.1",
        "css-loader": "^1.0.0",
        "html-webpack-plugin": "^3.2.0",
        "awesome-typescript-loader": "^5.2.1"
    },
    "peerDependencies": {
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "react-dnd": "^5.0.0"
    },
    "dependencies": {
        "immutability-helper": "^2.8.1",
        "react-dnd-html5-backend": "^5.0.1"
    }
}
